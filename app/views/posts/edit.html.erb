<h2> 게시판입니다. </h2>
<%= form_tag(post_path, method: :put) do %>
  <div class="form-group">
    <%= label_tag(:username, '작성자') %>
    <p><%=current_user.username%></p>
  </div>
  <div class="form-group">
    <%= label_tag(:title, '제목') %>
    <%= text_field_tag(:title, @post.title, :placeholder => "제목!!!?", class: "form-control")%>
  </div>
  <div class="form-group">
    <%= label_tag(:content, '내용') %>
    <%= text_area_tag(:content,@post.content , class: "form-control", rows: 3)%>
  </div>
  <%= hidden_field_tag(:user_id, current_user.id)%>
  <%= submit_tag("얍!", class: 'btn btn-primary') %>
<% end %> 
