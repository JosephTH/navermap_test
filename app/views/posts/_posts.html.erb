<% posts.each do |post| %>
<tr>
  <th scope="row" data-remote= true><%= post.id %></th>
  <td class="username" data-back = "red" data-text = "blue"><%= post.username %></td>
  <td><%= post.title %></td>
  <td><%= post.content %></td>
  <td><%= post.created_at %></td>
  <td>
    <%= link_to '보기', post , remote: true%>
  </td>
  <td>
    <%= link_to '삭제', post, method: :delete, remote: true, data: {confirm: "정말 지울거니.."} %>
  </td>

  <td>
    <%= link_to '수정', edit_post_path(post) %>
  </td>
</tr>
<% end %>
